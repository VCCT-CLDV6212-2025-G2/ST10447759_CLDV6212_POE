@model AzureRetailHub.Models.Order

@{
    ViewData["Title"] = "Edit Order Status";
}

<h1>Edit Order Status</h1>
<h4>Order ID: @Model.Id.ToUpper()</h4>
<hr />

<div>
    <h5>Customer Details</h5>
    <dl class="row">
        <dt class="col-sm-3">Customer Name</dt>
        <dd class="col-sm-9">@Model.User?.FullName</dd>
        
        <dt class="col-sm-3">Customer Email</dt>
        <dd class="col-sm-9">@Model.User?.Email</dd>
        
        <dt class="col-sm-3">Customer ID</dt>
        <dd class="col-sm-9">@Model.UserId</dd>
    </dl>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div class="form-group mb-3">
                <label for="status" class="control-label">Status</label>
                <select name="status" id="status" class="form-control" asp-for="Status">
                    <option value="Processing">Processing</option>
                    <option value="Shipped">Shipped</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>