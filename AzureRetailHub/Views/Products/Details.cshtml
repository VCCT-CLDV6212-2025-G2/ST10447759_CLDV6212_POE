@model AzureRetailHub.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/600x400?text=No+Image" : Model.ImageUrl)" class="img-fluid rounded" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h4>Description</h4>
        <p>@Model.Description</p>
        <h3 class="my-3">@Model.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</h3>

        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group" style="width: 200px;">
                <input type="number" name="quantity" value="1" class="form-control" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </div>
        </form>

        <hr />
        <a asp-action="Index">Back to List</a>
    </div>
</div>